        android:text="Maintenance Reminder"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        tools:layout_editor_absoluteX="47dp" />
    <!-- Device Malfunction -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Malfunction"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="514dp" />
    <!-- Home Button -->
    <ImageButton
        android:id="@+id/homebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/homebtn"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="656dp" />
    <!-- Dashboard Button -->
    <ImageButton
        android:id="@+id/dashboardbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        app:srcCompat="@android:drawable/ic_popup_reminder"
        tools:layout_editor_absoluteX="339dp"
        tools:layout_editor_absoluteY="664dp" />
    <!-- Room Light Status -->
    <TextView
        android:id="@+id/roomlightstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:textColor="#808080"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="249dp" />
    <!-- Thermostat Status -->
    <TextView
        android:id="@+id/thermostatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="72Â°F"
        android:textColor="#808080"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="293dp" />
    <!-- Front Door Status -->
    <TextView
        android:id="@+id/frontdoorstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locked"
        android:textColor="#808080"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="344dp" />
    <!-- Security Status -->
    <TextView
        android:id="@+id/securitystatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check front door"
        android:textColor="#808080"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="454dp" />
    <!-- Maintenance Status-->
    <TextView
        android:id="@+id/maintenancestatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change air filter"
        android:textColor="#808080"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="493dp" />
    <!-- Device Malfunction -->
    <TextView
        android:id="@+id/devicemalfunctionstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Living Room Thermostat"
        android:textColor="#808080"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="536dp" />

</androidx.constraintlayout.widget.ConstraintLayout>